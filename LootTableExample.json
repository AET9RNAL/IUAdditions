// Whether your entity is a boss or a regular mob they should all follow the same pool naming convention as shown in this example, that is the only change that ensures the loot table structure is correct.

{
  "pools": [
    {
      "name":"main", // first entry always starts with 'main'
      "rolls": 2,
      "entries": [
        {
          "type": "item",
          "weight": 10,
          "name": "divinerpg:eden_fragments",
          "functions": [
            {
              "function": "set_count",
              "count": {
                "min": 3,
                "max": 6
              }
            },
            {
              "function":"looting_enchant",
              "count":{
                "min":0,
                "max":1
              }
            }
          ]
        },
        {
          "type": "item",
          "weight": 5,
          "name": "divinerpg:eden_blitz"
        },
        {
          "type": "item",
          "weight": 1,
          "name": "divinerpg:teleportation_star",
          "functions": [
            {
              "function": "set_count",
              "count": {
                "min": 0,
                "max": 1
              }
            }
          ]
        }
      ]
    },
    {
      "name":"pool1", //Additional pools follow the pattern: poolN,where N is the pool number
      "rolls": 1,
      "entries": [
        {
          "type": "item",
          "weight": 1,
          "name": "divinerpg:eden_heart",
          "functions": [
            {
              "function": "set_count",
              "count": {
                "min": 1,
                "max": 4
              }
            },
            {
              "function": "looting_enchant",
              "count": {
                "min": 0,
                "max": 1
              }
            }
          ]
        }
      ]
    },
    {
      "name":"divinerpg:sunstorm_statue_drop",
      "conditions":[
        {
          "condition":"killed_by_player"
        }
      ],
      "rolls":1,
      "entries":[
        {
          "type":"item",
          "name":"divinerpg:sunstorm_statue",
          "weight":1
        }
      ]
    }
  ]
}